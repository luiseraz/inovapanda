// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Caminho definido no .env (ex.: file:./data/dev.db)
  url      = env("DATABASE_URL")
}

// Usuário da aplicação
// - name e avatar opcionais
// - role como string simples ("user" | "admin")
model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      String   @default("user")
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

// Produto
// - compareAtPrice opcional (preço "de")
// - brand/categoria opcionais
// - featured para seção de destaques da home
model Product {
  id             Int      @id @default(autoincrement())
  name           String
  slug           String   @unique
  description    String?
  price          Float
  compareAtPrice Float?
  image          String?
  brand          String?
  category       String?
  stock          Int      @default(0)
  featured       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([name])
  @@index([brand])
  @@index([category])
}
